extends base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="title", placeholder="Title", require, maxlength=80)
        input(name="description", placeholder="Description", require, minlength=20)
        input(name="hashtags", placeholder="Hashtags, seperated by comma.", require)
        input(type="submit", value="Upload Video")